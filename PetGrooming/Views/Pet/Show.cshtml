@model PetGrooming.Models.Pet

@{
    ViewBag.Title = "Show";
}
    
  <h2>Show Pet</h2>
  <a href="/Pet/List">Back to List</a>
  <a href="/Pet/Update/@Model.PetID" class="show-pets">Update</a>
  <div>Name : @Model.PetName</div>
  <div>Weight : @Model.PetWeight</div>
  <div>Color: @Model.PetColor</div>
  <div>Age: @Model.PetAge</div>
  <div>Species : @Model.Species.Name</div>
